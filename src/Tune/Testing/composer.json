{
    "name": "tune/testing",
    "description": "The Tune Testing package.",
    "license": "MIT",
    "homepage": "https://harmony.com",
    "support": {
        "issues": "https://github.com/harmony/framework/issues",
        "source": "https://github.com/harmony/framework"
    },
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@harmony.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "tune/collections": "^10.0",
        "tune/contracts": "^10.0",
        "tune/macroable": "^10.0",
        "tune/support": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Tune\\Testing\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "10.x-dev"
        }
    },
    "suggest": {
        "brianium/paratest": "Required to run tests in parallel (^6.0).",
        "tune/console": "Required to assert console commands (^10.0).",
        "tune/database": "Required to assert databases (^10.0).",
        "tune/http": "Required to assert responses (^10.0).",
        "mockery/mockery": "Required to use mocking (^1.5.1).",
        "phpunit/phpunit": "Required to use assertions and run tests (^9.5.8|^10.0.7)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
