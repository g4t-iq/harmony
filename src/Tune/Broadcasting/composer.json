{
    "name": "tune/broadcasting",
    "description": "The Tune Broadcasting package.",
    "license": "MIT",
    "homepage": "https://harmony.com",
    "support": {
        "issues": "https://github.com/harmony/framework/issues",
        "source": "https://github.com/harmony/framework"
    },
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@harmony.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^1.0|^2.0|^3.0",
        "tune/bus": "^10.0",
        "tune/collections": "^10.0",
        "tune/container": "^10.0",
        "tune/contracts": "^10.0",
        "tune/queue": "^10.0",
        "tune/support": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Tune\\Broadcasting\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "10.x-dev"
        }
    },
    "suggest": {
        "ext-hash": "Required to use the Ably and Pusher broadcast drivers.",
        "ably/ably-php": "Required to use the Ably broadcast driver (^1.0).",
        "pusher/pusher-php-server": "Required to use the Pusher broadcast driver (^6.0|^7.0)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
